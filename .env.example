# Server Configuration
PORT=5000
NODE_ENV=development

# Gmail SMTP Configuration for Nodemailer
# You need to generate an App Password from your Gmail account
# Go to: Google Account > Security > 2-Step Verification > App passwords
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# Firebase Admin SDK (Optional - for production)
# Generate this from Firebase Console > Project Settings > Service Accounts
# Download the JSON file and paste its content as a single line
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Admin Email (where booking notifications are sent)
ADMIN_EMAIL=inforoyalviplimos@gmail.com

# Database Configuration
DB_NAME=royalviplimo-522f7

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log