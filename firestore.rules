rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to bookings for authenticated users
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
      // Allow public read for booking creation (from booking form)
      allow create: if true;
    }
    
    // Allow read/write access to users collection for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to vehicle data
    match /vehicles/{vehicleId} {
      allow read: if true;
    }
    
    // Allow read access to blog posts
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}